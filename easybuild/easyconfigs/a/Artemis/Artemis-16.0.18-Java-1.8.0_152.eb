easyblock = 'JAR'

name = 'Artemis'
version = '16.0.18'

homepage = 'http://www.sanger.ac.uk/science/tools/artemis'
description = """Artemis is a free genome browser and annotation tool that allows visualisation of sequence features,
 next generation data and the results of analyses within the context of the sequence, and also its six-frame
 translation."""

toolchain = {'name': 'dummy', 'version': ''}

source_urls = ['ftp://ftp.sanger.ac.uk/pub/resources/software/artemis/v16/v%(version)s']
sources = ['%(namelower)s-v%(version)s.jar']

java = 'Java'
javaver = '1.8.0_152'
versionsuffix = '-%s-%s' % (java, javaver)
dependencies = [
    (java, javaver),
    ('X11', '20160819', '-foss-2015b'),
]

# add the installation dir to PATH
modextrapaths = {
    'PATH': '',
}

modloadmsg = "\n\nTo execute Artemis run 'java -jar $EBROOTARTEMIS/artemis-v16.0.18.jar'\n"

sanity_check_paths = {
    'files': ["artemis-v16.0.18.jar"],
    'dirs': [],
}

moduleclass = 'bio'
